<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_layout"
    android:orientation="vertical"
    android:background="@drawable/dialog_item_bg_only">

    <TextView
        android:id="@+id/dialog_camera"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#0073FF"
        android:textSize="18sp"
        android:text="相机"
        android:background="@drawable/select_dialog_item_bg_top"/>

    <TextView
        android:id="@+id/dialog_photos"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#0073FF"
        android:textSize="18sp"
        android:text="相册"
        android:background="@drawable/select_dialog_item_bg_buttom"/>


    <Button
        android:id="@+id/mBtn_Cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dip"
        android:background="@drawable/dialog_item_bg_only"
        android:text="取消"
        android:gravity="center"
        android:textColor="#0073FF"
        android:textSize="18sp" />

</LinearLayout>
