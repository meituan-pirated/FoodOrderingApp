<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/linear_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_notice"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">


    <!--    订单店铺及订单号-->
    <LinearLayout
        android:id="@+id/merchant_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="店铺名称"
            android:id="@+id/merchant_name"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/arrive_time123"
            android:text="hh:mm"
            android:layout_width="0dp"
            android:paddingStart="50dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="@color/secondary_text"/>
        <TextView
            android:text="到达"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="@color/secondary_text"/>
        <!--    已取餐、已送达  -->

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/stroke"
        android:layout_marginHorizontal="10dp"
        android:background="@color/divider" />

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="(下单时间)"
            android:textSize="22sp"
            android:textColor="@color/teal_500"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/order_time"
            android:text="hh:mm:ss"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="50dp" />


        <TextView
            android:id="@+id/order_price"
            android:text="共20￥"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_marginStart="60dp"
            android:gravity="center_vertical"
            android:layout_height="50dp" />


    </LinearLayout>

    <!--    订单地址信息-->
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="收货地址"
            android:textSize="22sp"
            android:textColor="@color/teal_500"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:layout_height="50dp" />

        <!--        <TextView-->

        <!--            android:text="送"-->
        <!--            android:textColor="@color/red"-->
        <!--            android:textSize="20sp"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/buyer_add"
            android:text="客人地址xxxxxxxxxxxx"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tv_if_evaluated"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="已评价"
            android:layout_marginEnd="20dp"
            android:textSize="25sp">

        </TextView>

        <Button
            android:id="@+id/btn_evaluate"
            android:visibility="visible"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:background="@drawable/check_border"
            android:text="进行评价"
            android:textSize="25sp"
            android:textColor="@color/red">

        </Button>

    </LinearLayout>





</LinearLayout>