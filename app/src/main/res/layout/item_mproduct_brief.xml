<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/productBrief_item_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="招牌牛肉面"
                android:textSize="40dp"/>

            <TextView
                android:id="@+id/product_sale_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20元"
                android:textSize="20dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="@dimen/spacing_minor"
            android:src="@mipmap/ic_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp">
        <Button
            android:id="@+id/btn_product_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"/>

        <Button
            android:id="@+id/btn_product_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"/>

    </LinearLayout>




</LinearLayout>